body 
	background url("../images/admin/background.png")
	background-size 100% 100%

.alert
	margin-bottom 0px !important
	margin-top 80px !important

#login
	background #111
	background-image url("../images/admin/loginBack.png")
	border-radius 0.4em
	border solid 1px rgba(0, 167, 245, 1)
	box-shadow 0px 0px 15px rgba(0, 167, 245, 0.84)
	font-family 'Ubuntu', 'Lato', sans-serif
	font-weight bold
	margin 60px auto 30px
	overflow hidden
	padding 10px
	position relative
	width 400px

	h2
		border-bottom 1px solid
		color #fff	
		font-family 'Ubuntu', 'Lato', sans-serif
		font-size 24px
		font-weight 400
		padding-bottom 5px
		text-align center

	label
		color #ddd
		cursor pointer
		float left
		font-size 12px
		letter-spacing 1px
		padding-top 9px
		text-indent 10px
		text-transform uppercase 
		text-shadow 0 1px 0 #000
		width 45%
		&:hover
			text-shadow 0px 0px 15px rgba(255, 255, 255, 0.84) !important
	
	input[type=text], input[type=password]
		background linear-gradient(#1f2124, #27292c)
		border 1px solid #000
		border-radius 3px
		box-shadow 0 1px 0 rgba(255,255,255,0.1)
		color #fff
		float left
		font-size 12px
		font-family 'Ubuntu', 'Lato', sans-serif
		margin-bottom 10px
		padding 8px 5px
		width 51%
		&:hover
			background #27292c

		&:focus
			background  #494d54
			border solid 1px rgba(0, 167, 245, 1)
			box-shadow 0px 0px 10px rgba(0, 167, 245, 0.84)
			outline none
	
	p
		margin 5px 0
		overflow hidden
		width 100%

	p:nth-child(5), p:nth-child(6)
		float left
		width 50%

	label[for=remember]
		display none
		display inline-block
		float none
		font-size 11px
		font-weight 400
		letter-spacing 0px
		text-transform capitalize
		text-indent 2px
		width auto

	input[type=checkbox]
		margin-left 10px
		vertical-align middle

	input[type=submit]
		background #38a6f0
		border 1px solid #0273dd
		border 1px solid rgba(0,0,0,0.4)
		border-radius 3px
		box-shadow inset 0 1px 0 rgba(255,255,255,0.3), inset 0 10px 10px rgba(255,255,255,0.1)
		color white
		cursor pointer
		display block
		font-family 'Ubuntu', 'Lato', sans-serif
		font-size 15px
		font-weight 700
		padding 8px 5px
		text-shadow 0 -1px 0 rgba(0,0,0,0.8)
		width 100%

		&:hover
			text-shadow 0px 0px 15px rgba(255, 255, 255, 0.84) !important


header 
	nav
		background linear-gradient(rgba(255, 255, 255, 0.12), rgba(255, 255, 255, 0.3))
		position fixed
		top 0px
		width 100%
		z-index 300

		ul
			margin-bottom 0px
			text-align right

			li
				display inline-block
				list-style none
				padding 15px

				a
					font-family 'Oswald', sans-serif
					font-size 18px
					font-weight 100
					color #fff

					&:hover
						color #d6d6d6
						text-decoration none !important
						text-shadow 0px 0px 15px rgba(255, 255, 255, 0.84) !important


#contentAdmin
	background #000
	background-image url("../images/admin/loginBack.png")
	background-position right
	background-repeat repeat-y
	border-radius 15px
	box-shadow 0 0 15px rgba(255, 255, 255, .5) !important
	margin-bottom 20px
	margin-top 70px
	min-height 300px
	padding 20px 40px

	h1, h2, h3
		color #fff
		font-family 'Oswald', sans-serif
		font-weight 200
		margin auto
		text-align right

	h2, h3
		text-align left

	table
		color #fff

		td
			vertical-align middle

	input[type=file]
		background #000
		border none
		color #ccc
		opacity 0
		position absolute
		top 0px
		z-index 300

	input[type=text], textarea
		background linear-gradient(#1f2124, #27292c)
		color #fff
		&:focus, &:hover
			box-shadow 0 0 25px rgba(0, 166, 255, 1) !important
	
	textarea
		resize vertical

	span
		background linear-gradient(#009dff, #0078c2)
		color #fff

.btn-info
	background linear-gradient(#009dff, #0078c2)
	border-color #fff
	&:hover
		background linear-gradient(#007ecc, #005e99)
		border-color #ccc
		box-shadow 0 0 25px rgba(0, 166, 255, 1) !important

.fileFake
	position relative
	input[type=text]
		color #ccc !important
		cursor pointer

	input[type=text].hover
		border-color #ccc !important
		color #fff !important
		box-shadow 0 0 25px rgba(0, 166, 255, 1) !important

	button.form-control
		background linear-gradient(#009dff, #0078c2)
		color #fff
		position absolute
		right 0px
		top 0px
		width 220px
	button.hover
			background linear-gradient(#007ecc, #005e99)
			box-shadow 0 0 25px rgba(0, 166, 255, 1) !important

.fileForm
	position relative

table
	tr
		td
			img
				height 300px
				width 300px